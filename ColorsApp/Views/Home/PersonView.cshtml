<div class="row">
    <h1 id="person-name"></h1>
</div>

<div class="row">
    
    <form id="update-form">
        <h3 class="form-header">User Details</h3>
        <div class="row">
            <div class="col-sm-2 details-container">
                <div class="form-check">
                    <label for="person-authorised" class="form-check-label">Authorized</label>
                    <input id="person-authorised" name="isAuthorised" type="checkbox" class="form-check-input">
                </div>
                <div class="form-check">
                    <label for="person-enabled" class="form-check-label">Enabled</label>
                    <input id="person-enabled" name ="isEnabled" type="checkbox" class="form-check-input">
                </div>
            </div>
        </div>
        
        <h3 class="form-header">Favourite Colours</h3>

        <div class="row">
            <div class="col-sm-2 details-container">
                <div class="form-check">
                    <label for="colour-blue" class="form-check-label">Blue</label>
                    <input id="colour-blue" data-colour-id="3" data-colour-name="Blue" name="blue" type="checkbox" class="form-check-input js-colour-check">
                </div>
                <div class="form-check">
                    <label for="colour-green" class="form-check-label">Green</label>
                    <input id="colour-green" data-colour-id="2" data-colour-name="Green" name="green" type="checkbox" class="form-check-input js-colour-check">
                </div>
                <div class="form-check">
                    <label for="colour-red" class="form-check-label">Red</label>
                    <input id="colour-red" data-colour-id="1" data-colour-name="Red" name="red" type="checkbox" class="form-check-input js-colour-check">
                </div>
            </div>
        </div>

        <div class="row">
            <div class="btn-group sbmtBtn">
                <input id="save-changes" class="btn btn-primary" type="submit" value="Save Changes" />
                <input id="cancel" class="btn btn-secondary" type="button" value="Cancel" />
            </div>
        </div>

    </form>
</div>


